pipeline {
  agent {
    docker {
      image 'abhishekf5/maven-abhishek-docker-agent:v1'
      args '--user root --network jenkins-sonar -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  stages {
    stage('Checkout') {
      steps {
        cleanWs()
        git branch: 'main', url: 'https://github.com/RadwaMohammedKamal/jenkins_demo'
      }
    }

    stage('Build and Test') {
      steps {
        sh 'mvn clean package'
      }
    }

    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://sonarqube:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh '''
            mvn sonar:sonar \
              -Dsonar.login=$SONAR_AUTH_TOKEN \
              -Dsonar.host.url=${SONAR_URL} \
              -Dsonar.ws.timeout=300 \
              -Dsonar.projectKey=jenkins_demo \
              -Dsonar.projectName=jenkins_demo
          '''
        }
      }
    }

    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "radwa1/jenkins_demo:${BUILD_NUMBER}"
      }
      steps {
        script {
          withCredentials([usernamePassword(credentialsId: 'doker-hub', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
            sh '''
              docker build -t ${DOCKER_IMAGE} .
              echo ${DOCKER_PASS} | docker login -u ${DOCKER_USER} --password-stdin
              docker push ${DOCKER_IMAGE}
              docker logout
            '''
          }
        }
      }
    }

    stage('Update Deployment File') {
      environment {
        GIT_REPO_NAME = "jenkins_demo"
        GIT_USER_NAME = "RadwaMohammedKamal"
      }
      steps {
        withCredentials([string(credentialsId: 'gethub', variable: 'GITHUB_TOKEN')]) {
          sh '''
            git config --global --add safe.directory ${WORKSPACE}
            git config user.email "radwamohamed202116768@gmail.com"
            git config user.name "radwa"
            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" kubernetes/deployment.yml
            git add .
            git commit -m "Update deployment image to version ${BUILD_NUMBER}"
            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
          '''
        }
      }
    }
  }
}

