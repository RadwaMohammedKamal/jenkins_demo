pipeline {
  agent {
    docker {
      image 'maven:3.9.2-eclipse-temurin-17' // Maven + JDK
      args '-u root -v /var/run/docker.sock:/var/run/docker.sock'
    }
  }

  options {
    timestamps()
  }

  stages {

    stage('Checkout') {
      steps {
        cleanWs()
        git branch: 'main',
            url: 'https://github.com/RadwaMohammedKamal/jenkins_demo',
            credentialsId: 'gethub'
      }
    }

    stage('Build and Package') {
      steps {
        sh '''
          java -version
          mvn clean package -DskipTests
        '''
      }
    }

    stage('Build Docker Image & Push') {
      environment {
        DOCKER_IMAGE = "radwa1/jenkins_demo:${BUILD_NUMBER}"
      }
      steps {
        withCredentials([
          usernamePassword(
            credentialsId: 'doker-hub',
            usernameVariable: 'DOCKER_USER',
            passwordVariable: 'DOCKER_PASS'
          )
        ]) {
          sh '''
            # Build Docker image (only the JAR, small image)
            docker build -t ${DOCKER_IMAGE} .

            # Login and push to Docker Hub
            echo "${DOCKER_PASS}" | docker login -u "${DOCKER_USER}" --password-stdin
            docker push ${DOCKER_IMAGE}
            docker logout
          '''
        }
      }
    }

    stage('Update Deployment File') {
      environment {
        GIT_REPO_NAME = "jenkins_demo"
        GIT_USER_NAME = "RadwaMohammedKamal"
      }
      steps {
        withCredentials([
          string(credentialsId: 'gethub', variable: 'GITHUB_TOKEN')
        ]) {
          sh '''
            git config --global --add safe.directory "$WORKSPACE"
            git config user.email "radwamohamed202116768@gmail.com"
            git config user.name "radwa"

            sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" kubernetes/deployment.yml

            git add kubernetes/deployment.yml
            git commit -m "Update deployment image to ${BUILD_NUMBER}" || echo "No changes to commit"
            git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME}.git HEAD:main
          '''
        }
      }
    }
  }
}

